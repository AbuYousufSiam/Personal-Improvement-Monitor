<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/book_type_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_calculator" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <TextView
                android:id="@+id/book_type_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category Name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/book_type_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category Description"
                android:textSize="14sp"
                android:paddingTop="4dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/expand_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_expand_more"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <!-- Small icons section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/icon1_ac_bk_type"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_basic_math" />

        <ImageView
            android:id="@+id/icon2_ac_bk_type"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_event_countdown"
            android:layout_marginStart="8dp" />

        <ImageView
            android:id="@+id/icon3_ac_bk_type"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_home"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>
