<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.example.improvementmonitor">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <!-- Existing Activities -->
        <activity
            android:name="com.im.calculator.CalculatorActivity"
            android:exported="false" />

        <activity
            android:name="com.im.calculator.ExtendedCalculatorActivity"
            android:exported="false" />

        <activity
            android:name="com.ebook.UpdateActivity"
            android:exported="false"
            android:parentActivityName="com.ebook.BookActivity" />

        <activity
            android:name="com.ebook.AddActivity"
            android:exported="false"
            android:label="Add Book in Database"
            android:parentActivityName="com.ebook.BookActivity" />

        <activity
            android:name="com.ebook.BookActivity"
            android:exported="false"
            android:label="Book Collection Activity" />

        <activity android:name="com.wallet.ui.SavingDetailActivity"
            android:theme="@style/Theme.AppCompat.Dialog"/>


        <!-- Main App Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Other Activities -->
        <activity android:name=".AboutActivity" />
        <activity android:name=".EbookCollectionActivity" />
        <activity android:name=".ExploreActivity" />
        <activity android:name=".HelpActivity" />
        <activity android:name=".NotificationActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".TaskManagementActivity" />

        <!-- Wallet Activities (New Feature) -->
        <activity android:name="com.wallet.ui.WalletListActivity" />
        <activity android:name="com.wallet.ui.AddWalletActivity" />
        <activity android:name="com.wallet.ui.WalletDetailActivity" />
        <activity android:name="com.wallet.ui.AddSavingActivity" />

    </application>

</manifest>
